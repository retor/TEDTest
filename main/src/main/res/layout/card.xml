<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="4dp"
        card_view:cardBackgroundColor="#0e77da"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp"
        android:clickable="true">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:nestedScrollingEnabled="false">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/title" android:paddingLeft="7dp" android:textStyle="bold|italic"
                android:textAlignment="center"/>

        <ImageView
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:id="@+id/thumb"
                android:layout_below="@+id/title" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="82dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/description"
                android:nestedScrollingEnabled="true" android:padding="5dp" android:layout_alignTop="@+id/thumb"
                android:layout_toRightOf="@+id/thumb" android:layout_toEndOf="@+id/thumb"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/duration" android:layout_below="@+id/thumb" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/description"
                android:layout_toStartOf="@+id/description"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/pubdate"
                android:textSize="10dp"
                android:layout_below="@+id/title" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <!--    <VideoView
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/video"
                android:layout_gravity="center_horizontal"/>-->

</android.support.v7.widget.CardView>